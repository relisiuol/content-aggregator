{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "relisiuol/content-aggregator",
	"description": "Content Aggregator",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"sirbrillig/phpcs-variable-analysis": "^2.12",
		"squizlabs/php_codesniffer": "^3.13",
		"wp-coding-standards/wpcs": "^3.0",
		"automattic/vipwpcs": "^3.0"
	},
	"keywords": [
		"aggregator",
		"json",
		"xml"
	],
	"homepage": "https://github.com/relisiuol/content-aggregator#readme",
	"support": {
		"issues": "https://github.com/relisiuol/content-aggregator/issues",
		"source": "https://github.com/relisiuol/content-aggregator"
	},
	"config": {
		"process-timeout": 0,
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"cb": "phpcbf . --report-summary --report-source",
		"cs": "phpcs ."
	}
}
