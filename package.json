{
	"$schema": "https://json.schemastore.org/package",
	"name": "content-aggregator",
	"version": "1.0.0",
	"description": "Content Aggregator will import content from a JSON or XML file.",
	"author": "relisiuol",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"aggregator",
		"json",
		"xml"
	],
	"homepage": "https://github.com/relisiuol/content-aggregator#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/relisiuol/content-aggregator.git"
	},
	"bugs": {
		"url": "https://github.com/relisiuol/content-aggregator/issues"
	},
	"engines": {
		"node": ">=18.0.0 <24.0.0",
		"pnpm": ">=8.0.0 <11.0.0"
	},
	"type": "module",
	"main": "assets/js/content-aggregator.js",
	"dependencies": {
		"@wordpress/i18n": "^6.2.0",
		"jquery": "^3.7.1",
		"jquery-autocomplete": "^1.2.8",
		"select2": "^4.0.13"
	},
	"devDependencies": {
		"@wordpress/prettier-config": "^4.29.0",
		"@wordpress/scripts": "^30.22.0",
		"copy-webpack-plugin": "^13.0.1",
		"eslint-plugin-json": "^4.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"markdownlint-cli": "^0.45.0",
		"mini-css-extract-plugin": "^2.9.4",
		"stylelint-order": "^7.0.0",
		"svglint": "^4.1.0"
	},
	"scripts": {
		"build": "wp-scripts build",
		"format": "wp-scripts format",
		"lint": "pnpm run /^lint:.*/",
		"lint:css": "wp-scripts lint-style \"assets/**/*.scss\"",
		"lint:js": "wp-scripts lint-js",
		"lint:json": "wp-scripts lint-js --ext .json --fix .",
		"lint:md": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer run cb",
		"lint:svg": "svglint assets/svg/**/*.svg",
		"localize:start": "wp i18n make-pot . languages/content-aggregator.pot",
		"localize:update": "wp i18n update-po languages/content-aggregator.pot",
		"localize:mo": "wp i18n make-mo languages/",
		"localize:json": "wp i18n make-json --no-purge languages/",
		"localize:php": "wp i18n make-php languages/",
		"plugin-zip": "composer install --no-dev --prefer-dist --no-progress && wp-scripts plugin-zip",
		"prepare": "husky && composer install",
		"start": "wp-scripts start"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.json": [
			"prettier --write -u",
			"eslint --ext .json --fix ."
		],
		"assets/js/**/*.{js,ts,jsx,tsx}": [
			"prettier --write -u",
			"eslint --ext .js --fix \"assets/js\""
		],
		"assets/scss/**/*.{css,scss}": [
			"prettier --write -u",
			"stylelint --fix \"assets/scss/**/*.{css,scss}\""
		],
		"assets/svg/**/*.svg": [
			"svglint assets/svg/**/*.svg"
		],
		"package.json": [
			"npmPkgJsonLint ."
		],
		"*.md": [
			"prettier --write -u",
			"markdownlint --fix"
		],
		"*.php": [
			"prettier --write -u",
			"composer run cs",
			"composer run cb"
		]
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"es6": true,
			"jquery": true,
			"node": true
		},
		"globals": {
			"contentAggregator": "readonly",
			"wp": "readonly"
		},
		"parserOptions": {
			"sourceType": "module"
		},
		"extends": [
			"prettier",
			"eslint:recommended",
			"plugin:json/recommended-legacy",
			"plugin:@wordpress/eslint-plugin/recommended"
		],
		"ignorePatterns": [
			".husky",
			"!.vscode",
			"!.markdownlint.json",
			"composer.lock",
			"pnpm-lock.yaml",
			"/build/**",
			"/includes/vendor/**",
			"/languages/**"
		],
		"plugins": [
			"import",
			"json"
		],
		"rules": {
			"@wordpress/i18n-text-domain": [
				"error",
				{
					"allowedTextDomain": "content-aggregator"
				}
			],
			"prettier/prettier": [
				"error",
				{
					"endOfLine": "auto"
				}
			]
		},
		"settings": {
			"json/sort-package-json": false
		}
	},
	"npmpackagejsonlint": {
		"extends": "@wordpress/npm-package-json-lint-config"
	},
	"prettier": "@wordpress/prettier-config",
	"stylelint": {
		"extends": [
			"@wordpress/stylelint-config/scss"
		],
		"ignoreFiles": [
			"/build",
			"/node_modules",
			"/vendor"
		],
		"plugins": [
			"stylelint-order"
		],
		"rules": {
			"selector-class-pattern": null,
			"order/order": [
				{
					"type": "at-rule"
				},
				"declarations",
				"custom-properties",
				"dollar-variables",
				{
					"type": "at-rule",
					"hasBlock": true
				},
				"less-mixins",
				"rules"
			],
			"order/properties-order": [
				[
					{
						"groupName": "Position",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"position",
							"top",
							"right",
							"bottom",
							"left",
							"z-index",
							"border-box",
							"float",
							"clear"
						]
					},
					{
						"groupName": "Display",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"display",
							"flex",
							"flex-grow",
							"flex-shrink",
							"flex-basis",
							"flex-direction",
							"flex-flow",
							"flex-wrap",
							"grid",
							"grid-area",
							"grid-template",
							"grid-template-areas",
							"grid-template-rows",
							"grid-template-columns",
							"grid-row",
							"grid-row-start",
							"grid-row-end",
							"grid-column",
							"grid-column-start",
							"grid-column-end",
							"grid-auto-rows",
							"grid-auto-columns",
							"grid-auto-flow",
							"grid-gap",
							"grid-row-gap",
							"grid-column-gap",
							"gap",
							"align-content",
							"align-items",
							"align-self",
							"justify-content",
							"order"
						]
					},
					{
						"groupName": "Spacing",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"width",
							"min-width",
							"max-width",
							"height",
							"min-height",
							"max-height",
							"box-sizing",
							"margin",
							"margin-top",
							"margin-right",
							"margin-bottom",
							"margin-left",
							"padding",
							"padding-top",
							"padding-right",
							"padding-bottom",
							"padding-left",
							"object-fit"
						]
					},
					{
						"groupName": "Colors",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"color",
							"background",
							"background-color",
							"background-image",
							"background-attachment",
							"background-position",
							"background-position-x",
							"background-position-y",
							"background-clip",
							"background-origin",
							"background-size",
							"background-repeat"
						]
					},
					{
						"groupName": "Text",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"font",
							"font-family",
							"font-size",
							"line-height",
							"font-weight",
							"font-style",
							"font-variant",
							"font-size-adjust",
							"font-stretch",
							"text-align",
							"text-align-last",
							"text-decoration",
							"text-emphasis",
							"text-emphasis-position",
							"text-emphasis-style",
							"text-emphasis-color",
							"text-indent",
							"text-justify",
							"text-rendering",
							"text-outline",
							"text-transform",
							"text-wrap",
							"text-overflow",
							"text-overflow-ellipsis",
							"text-overflow-mode",
							"text-shadow",
							"letter-spacing",
							"word-spacing",
							"word-wrap",
							"word-break"
						]
					},
					{
						"groupName": "Decors",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"border",
							"border-spacing",
							"border-collapse",
							"border-width",
							"border-style",
							"border-color",
							"border-top",
							"border-top-width",
							"border-top-style",
							"border-top-color",
							"border-right",
							"border-right-width",
							"border-right-style",
							"border-right-color",
							"border-bottom",
							"border-bottom-width",
							"border-bottom-style",
							"border-bottom-color",
							"border-left",
							"border-left-width",
							"border-left-style",
							"border-left-color",
							"border-radius",
							"border-top-left-radius",
							"border-top-right-radius",
							"border-bottom-right-radius",
							"border-bottom-left-radius",
							"border-image",
							"border-image-source",
							"border-image-slice",
							"border-image-width",
							"border-image-outset",
							"border-image-repeat",
							"border-top-image",
							"border-right-image",
							"border-bottom-image",
							"border-left-image",
							"border-corner-image",
							"border-top-left-image",
							"border-top-right-image",
							"border-bottom-right-image",
							"border-bottom-left-image",
							"box-shadow",
							"outline",
							"outline-width",
							"outline-style",
							"outline-color",
							"outline-offset",
							"list-style",
							"list-style-position",
							"list-style-type",
							"list-style-image"
						]
					},
					{
						"groupName": "Tweaks",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"transform",
							"transform-origin",
							"opacity",
							"visibility",
							"cursor",
							"overflow",
							"overflow-x",
							"overflow-y",
							"overflow-scrolling"
						]
					},
					{
						"groupName": "Animations",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"animation",
							"animation-name",
							"animation-duration",
							"animation-play-state",
							"animation-timing-function",
							"animation-delay",
							"animation-iteration-count",
							"animation-direction",
							"animation-fill-mode",
							"transition",
							"transition-delay",
							"transition-timing-function",
							"transition-duration",
							"transition-property"
						]
					},
					{
						"groupName": "Misc",
						"emptyLineBefore": "never",
						"noEmptyLineBetween": true,
						"properties": [
							"pointer-event",
							"content",
							"appearance"
						]
					}
				],
				{
					"unspecified": "bottom",
					"emptyLineBeforeUnspecified": "never"
				}
			]
		}
	}
}
